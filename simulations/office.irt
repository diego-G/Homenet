ifconfig:

# ethernet card 0 of router - connected to Hub2
name: eth0
  inet_addr: 192.168.2.2
  Mask: 255.255.255.0
  Groups: 224.0.0.5
  MTU: 1500
  Metric: 1
  BROADCAST MULTICAST

# ethernet card 1 of router - connected to kitchen
name: eth1
  inet_addr: 192.168.12.1
  Mask: 255.255.255.255
  Groups: 224.0.0.5
  MTU: 1500
  Metric: 1
  POINTTOPOINT MULTICAST

# ethernet card 2 of router - connected to living_room
name: eth2
  inet_addr: 192.168.12.2
  Mask: 255.255.255.255
  Groups: 224.0.0.5
  MTU: 1500
  Metric: 1
  POINTTOPOINT MULTICAST

# ethernet card 3 of router - connected to room_A
name: eth3
  inet_addr: 192.168.12.3
  Mask: 255.255.255.255
  Groups: 224.0.0.5
  MTU: 1500
  Metric: 1
  POINTTOPOINT MULTICAST

# ethernet card 4 of router - connected to room_C
name: eth4
